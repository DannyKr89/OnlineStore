<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyEditTextStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="boxBackgroundColor">#F8F8F8</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconDrawable">@drawable/ic_clear_text</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="MyButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="backgroundTint">@color/selector_login_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>